  <HediffDef ParentName="OnApparelHediff">
    <defName>MooMF_WornMedicineBoon</defName>
    <label>Legacy of the Scalpel</label>
    <description>This person is wearing a piece of clothing that carries legacy of a legendary doctor, granting them increased medical task speeds and improved outcomes.</description>
    <stages>
      <li>
        <statFactors>
          <MedicalTendSpeed>3</MedicalTendSpeed>
          <MedicalOperationSpeed>3</MedicalOperationSpeed> 
        </statFactors>
        <statOffsets>
          <MedicalTendQuality>.5</MedicalTendQuality>
          <MedicalSurgerySuccessChance>.5</MedicalSurgerySuccessChance>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>


  <HediffDef ParentName="OnApparelHediff">
    <defName>MooMF_WornSocialBoon</defName>
    <label>Legacy of the Silver-Tongued</label>
    <description>This person is wearing a piece of clothing that carries legacy of a legendary socialite, granting them increased social skills.</description>
    <stages>
      <li>
        <statFactors>
          <NegotiationAbility>2</NegotiationAbility>
          <SocialImpact>2</SocialImpact>
        </statFactors>
        <statOffsets>
          <TradePriceImprovement>.3</TradePriceImprovement>
          <DrugSellPriceImprovement>.3</DrugSellPriceImprovement>
          <ArrestSuccessChance>2</ArrestSuccessChance>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>


  <HediffDef ParentName="OnApparelHediff">
    <defName>MooMF_WornIntellectualBoon</defName>
    <label>Legacy of the Curious</label>
    <description>This person is wearing a piece of clothing that carries legacy of a legendary researcher, granting them increased research and learning speeds.</description>
    <stages>
      <li>
        <statFactors>
          <ResearchSpeed>3</ResearchSpeed>
          <GlobalLearningFactor>1.25</GlobalLearningFactor>
        </statFactors>
      </li>
    </stages>   
