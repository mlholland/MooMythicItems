<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <AbilityDef>
    <defName>MooMF_Thrumbocall</defName>
    <label>Thrumbocall</label>
    <description>Channel the spirit of a ancient friend of the thrumbos to immediately cause a thrumbo migration event. Has a 1 year cooldown.</description>
    <iconPath>UI/Abilities/Painblock</iconPath>
    <hotKey>Misc1</hotKey>
    <cooldownTicksRange>3600000~3600000</cooldownTicksRange>
    <jobDef>CastAbilityOnThingUninterruptible</jobDef>
    <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
    <disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
    <targetRequired>False</targetRequired>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <warmupTime>3</warmupTime>
      <range>0</range>
      <requireLineOfSight>False</requireLineOfSight>
      <targetParams>
        <canTargetSelf>True</canTargetSelf>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class = "MooMythicItems.CompProperties_MapWideIncident">
        <incident>ThrumboPasses</incident>
      </li>
    </comps>
  </AbilityDef>

  <AbilityDef>
    <defName>MooMF_GrapeshotRocket</defName>
    <label>Anti-personnel Rocket</label>
    <description>Use the jury-rigged rocket launcher mounted on the side of this weapon to shoot an anti-personnel explosive. Deals heavy damage, but has no armor shredding power. Has a 1-day cooldown.</description>
    <iconPath>UI/Abilities/Painblock</iconPath>
    <hotKey>Misc1</hotKey>
    <cooldownTicksRange>60000~60000</cooldownTicksRange>
    <jobDef>CastAbilityOnThing</jobDef>
    <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
    <disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
    <targetRequired>True</targetRequired>
    <statBases>
      <AccuracyTouch>1</AccuracyTouch>
      <AccuracyShort>1</AccuracyShort>
      <AccuracyMedium>1</AccuracyMedium>
      <AccuracyLong>1</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <verbProperties>
      <verbClass>MooMythicItems.Verb_ShootAbility</verbClass>
      <hasStandardCommand>true</hasStandardCommand>
      <defaultProjectile>MooMF_Bullet_GrapeshotRocket</defaultProjectile>
      <forcedMissRadius>1.9</forcedMissRadius>
      <warmupTime>1.5</warmupTime>
      <ai_AvoidFriendlyFireRadius>8</ai_AvoidFriendlyFireRadius>
      <range>35.9</range>
      <burstShotCount>1</burstShotCount>
      <soundCast>InfernoCannon_Fire</soundCast>
      <soundCastTail>GunTail_Heavy</soundCastTail>
      <onlyManualCast>true</onlyManualCast>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
        <canTargetAnimals>true</canTargetAnimals>
      </targetParams>
      <muzzleFlashScale>14</muzzleFlashScale>
    </verbProperties>
    <comps>
      <li Class = "MooMythicItems.CompProperties_Empty"/>
    </comps>
  </AbilityDef>


  <AbilityDef>
    <defName>MooMF_BigEMPRocket</defName>
    <label>Mega-Emp Rocket</label>
    <description>Use the jury-rigged emp cannon mounted on the side of this weapon to shoot massive EMP explosive. Deals no damage, but will stun unadapted mechanoids for a very long time.</description>
    <iconPath>UI/Abilities/Painblock</iconPath>
    <hotKey>Misc1</hotKey>
    <cooldownTicksRange>60000~60000</cooldownTicksRange>
    <jobDef>CastAbilityOnThing</jobDef>
    <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
    <disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
    <targetRequired>True</targetRequired>
    <statBases>
      <AccuracyTouch>1</AccuracyTouch>
      <AccuracyShort>1</AccuracyShort>
      <AccuracyMedium>1</AccuracyMedium>
      <AccuracyLong>1</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <verbProperties>
      <verbClass>MooMythicItems.Verb_ShootAbility</verbClass>
      <hasStandardCommand>true</hasStandardCommand>
      <defaultProjectile>MooMF_Bullet_EMPRocket</defaultProjectile>
      <forcedMissRadius>1.9</forcedMissRadius>
      <warmupTime>1.5</warmupTime>
      <ai_AvoidFriendlyFireRadius>8</ai_AvoidFriendlyFireRadius>
      <range>35.9</range>
      <burstShotCount>1</burstShotCount>
      <soundCast>InfernoCannon_Fire</soundCast>
      <soundCastTail>GunTail_Heavy</soundCastTail>
      <onlyManualCast>true</onlyManualCast>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
        <canTargetAnimals>true</canTargetAnimals>
      </targetParams>
      <muzzleFlashScale>14</muzzleFlashScale>
    </verbProperties>
    <comps>
      <li Class = "MooMythicItems.CompProperties_Empty"/>
